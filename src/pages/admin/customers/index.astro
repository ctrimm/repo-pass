---
import Layout from '../../../layouts/main.astro';
import AdminNav from '../../../components/AdminNav.astro';
import { requireAdmin } from '../../../lib/auth';
import { db, purchases, repositories, accessLogs } from '../../../db';
import { eq, desc } from 'drizzle-orm';

// Require admin access
await requireAdmin(Astro.cookies).catch(() => {
  return Astro.redirect('/');
});

// Get query parameters for filtering
const repositoryId = Astro.url.searchParams.get('repository');
const status = Astro.url.searchParams.get('status');
const search = Astro.url.searchParams.get('search');

// Fetch all purchases
let allPurchases = await db.select().from(purchases).orderBy(desc(purchases.createdAt));

// Apply filters
if (repositoryId) {
  allPurchases = allPurchases.filter(p => p.repositoryId === repositoryId);
}

if (status) {
  allPurchases = allPurchases.filter(p => p.accessStatus === status);
}

if (search) {
  const searchLower = search.toLowerCase();
  allPurchases = allPurchases.filter(p =>
    p.email.toLowerCase().includes(searchLower) ||
    p.githubUsername.toLowerCase().includes(searchLower)
  );
}

// Get repository details for each purchase
const customersWithDetails = await Promise.all(
  allPurchases.map(async (purchase) => {
    const repo = await db.query.repositories.findFirst({
      where: eq(repositories.id, purchase.repositoryId),
    });

    // Get access logs count
    const logs = await db.select().from(accessLogs).where(eq(accessLogs.purchaseId, purchase.id));

    return {
      ...purchase,
      repositoryName: repo?.displayName || 'Unknown',
      repositorySlug: repo?.slug || '',
      githubOwner: repo?.githubOwner || '',
      githubRepoName: repo?.githubRepoName || '',
      accessLogCount: logs.length,
    };
  })
);

// Get all repositories for filter dropdown
const allRepositories = await db.select().from(repositories).orderBy(repositories.displayName);

// Calculate stats
const totalCustomers = customersWithDetails.length;
const activeCustomers = customersWithDetails.filter(c => c.accessStatus === 'active').length;
const pendingCustomers = customersWithDetails.filter(c => c.accessStatus === 'pending').length;
const revokedCustomers = customersWithDetails.filter(c => c.accessStatus === 'revoked').length;
---

<Layout title="Customers - RepoPass Admin">
  <div class="min-h-screen bg-gray-50">
    <AdminNav />

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Stats -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-sm font-medium text-gray-500">Total Customers</h3>
          <p class="text-3xl font-bold text-gray-900 mt-2">{totalCustomers}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-sm font-medium text-gray-500">Active</h3>
          <p class="text-3xl font-bold text-green-600 mt-2">{activeCustomers}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-sm font-medium text-gray-500">Pending</h3>
          <p class="text-3xl font-bold text-yellow-600 mt-2">{pendingCustomers}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-sm font-medium text-gray-500">Revoked</h3>
          <p class="text-3xl font-bold text-red-600 mt-2">{revokedCustomers}</p>
        </div>
      </div>

      <!-- Filters -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Search</label>
            <input
              type="text"
              name="search"
              value={search || ''}
              placeholder="Email or username..."
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Repository</label>
            <select
              name="repository"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="">All Repositories</option>
              {allRepositories.map((repo) => (
                <option value={repo.id} selected={repositoryId === repo.id}>
                  {repo.displayName}
                </option>
              ))}
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
            <select
              name="status"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="">All Statuses</option>
              <option value="active" selected={status === 'active'}>Active</option>
              <option value="pending" selected={status === 'pending'}>Pending</option>
              <option value="revoked" selected={status === 'revoked'}>Revoked</option>
            </select>
          </div>

          <div class="flex items-end gap-2">
            <button
              type="submit"
              class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium"
            >
              Filter
            </button>
            <a
              href="/admin/customers"
              class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-2 rounded-lg font-medium"
            >
              Clear
            </a>
          </div>
        </form>
      </div>

      <!-- Customers Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Customer
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Repository
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Type
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Amount
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Purchase Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {customersWithDetails.length === 0 ? (
                <tr>
                  <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                    No customers found
                  </td>
                </tr>
              ) : (
                customersWithDetails.map((customer) => (
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex flex-col">
                        <div class="text-sm font-medium text-gray-900">
                          {customer.githubUsername}
                        </div>
                        <div class="text-sm text-gray-500">{customer.email}</div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex flex-col">
                        <div class="text-sm font-medium text-gray-900">
                          {customer.repositoryName}
                        </div>
                        <div class="text-sm text-gray-500">
                          {customer.githubOwner}/{customer.githubRepoName}
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {customer.purchaseType === 'subscription' ? 'Subscription' : 'One-time'}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      ${(customer.amountCents / 100).toFixed(2)}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class={`px-2 py-1 text-xs rounded-full font-medium ${
                        customer.accessStatus === 'active' ? 'bg-green-100 text-green-800' :
                        customer.accessStatus === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                        'bg-red-100 text-red-800'
                      }`}>
                        {customer.accessStatus}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {new Date(customer.createdAt).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                      })}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                      <a
                        href={`/admin/customers/${customer.id}`}
                        class="text-blue-600 hover:text-blue-900 mr-3"
                      >
                        View Details
                      </a>
                      {customer.accessStatus === 'active' && (
                        <button
                          onclick={`revokeAccess('${customer.id}', '${customer.githubUsername}')`}
                          class="text-red-600 hover:text-red-900"
                        >
                          Revoke
                        </button>
                      )}
                    </td>
                  </tr>
                ))
              )}
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
</Layout>

<script>
  async function revokeAccess(purchaseId: string, username: string) {
    if (!confirm(`Are you sure you want to revoke access for ${username}? This will remove them as a collaborator.`)) {
      return;
    }

    const reason = prompt('Reason for revocation (optional):');

    try {
      const response = await fetch(`/api/admin/customers/${purchaseId}/revoke`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ reason: reason || undefined }),
      });

      if (response.ok) {
        alert('Access revoked successfully');
        window.location.reload();
      } else {
        const error = await response.json();
        alert(`Error: ${error.error || 'Failed to revoke access'}`);
      }
    } catch (error) {
      alert('Error revoking access');
      console.error(error);
    }
  }

  // Make function globally available
  (window as any).revokeAccess = revokeAccess;
</script>
