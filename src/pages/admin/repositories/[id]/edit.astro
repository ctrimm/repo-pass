---
import PostHogLayout from '@/layouts/PostHogLayout.astro';
import Layout from '../../../../layouts/main.astro';
import AdminNav from '../../../../components/AdminNav.astro';
import { requireAdmin } from '../../../../lib/auth';
import { db, repositories, pricingHistory, purchases } from '../../../../db';
import { eq, desc } from 'drizzle-orm';

// Require admin access
const session = await requireAdmin(Astro.cookies).catch(() => {
  return Astro.redirect('/');
});

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin');
}

// Get repository
const repository = await db.query.repositories.findFirst({
  where: eq(repositories.id, id),
});

if (!repository) {
  return Astro.redirect('/admin');
}

// Get pricing history
const history = await db
  .select()
  .from(pricingHistory)
  .where(eq(pricingHistory.repositoryId, id))
  .orderBy(desc(pricingHistory.effectiveFrom));

// Get purchase stats
const allPurchases = await db.select().from(purchases).where(eq(purchases.repositoryId, id));

const totalPurchases = allPurchases.length;
const activePurchases = allPurchases.filter((p) => p.accessStatus === 'active').length;
const totalRevenue = allPurchases
  .filter((p) => p.status === 'completed')
  .reduce((sum, p) => sum + p.amountCents, 0);
---

<PostHogLayout>
  <Layout title={`Edit ${repository.displayName} - RepoPass Admin`}>
    <div class="min-h-screen bg-gray-50">
      <AdminNav />
  
      <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Edit Form -->
          <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow p-6">
              <h2 class="text-lg font-semibold text-gray-900 mb-6">Repository Details</h2>
  
              <form id="edit-form" class="space-y-6">
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">GitHub Owner</label>
                    <input
                      type="text"
                      value={repository.githubOwner}
                      disabled
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-500"
                    />
                    <p class="mt-1 text-xs text-gray-500">Cannot be changed</p>
                  </div>
  
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Repository Name</label
                    >
                    <input
                      type="text"
                      value={repository.githubRepoName}
                      disabled
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-500"
                    />
                    <p class="mt-1 text-xs text-gray-500">Cannot be changed</p>
                  </div>
                </div>
  
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Display Name</label>
                  <input
                    type="text"
                    name="displayName"
                    value={repository.displayName}
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                  />
                </div>
  
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                  <textarea
                    name="description"
                    rows="4"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                    >{repository.description || ''}</textarea
                  >
                </div>
  
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Cover Image URL</label>
                  <input
                    type="url"
                    name="coverImageUrl"
                    value={repository.coverImageUrl || ''}
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                    placeholder="https://example.com/image.png"
                  />
                </div>
  
                <div class="border-t pt-6">
                  <h3 class="text-md font-semibold text-gray-900 mb-4">Pricing</h3>
  
                  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-4">
                    <p class="text-sm text-yellow-800">
                      <strong>Note:</strong> Changing the price will NOT affect existing customers. They
                      will keep their original pricing (grandfathering).
                    </p>
                  </div>
  
                  <div class="grid grid-cols-2 gap-4">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1">Price (USD)</label>
                      <input
                        type="number"
                        name="price"
                        value={(repository.priceCents / 100).toFixed(2)}
                        required
                        min="1"
                        step="0.01"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
                      />
                      <p class="mt-1 text-xs text-gray-500">
                        Current: ${(repository.priceCents / 100).toFixed(2)}
                      </p>
                    </div>
  
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1">Pricing Type</label>
                      <input
                        type="text"
                        value={repository.pricingType === 'subscription'
                          ? 'Subscription'
                          : 'One-time'}
                        disabled
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-500"
                      />
                      <p class="mt-1 text-xs text-gray-500">Cannot be changed</p>
                    </div>
                  </div>
                </div>
  
                <div class="border-t pt-6">
                  <h3 class="text-md font-semibold text-gray-900 mb-4">Status</h3>
  
                  <div class="flex items-center">
                    <input
                      type="checkbox"
                      name="active"
                      id="active"
                      checked={repository.active}
                      class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                    />
                    <label for="active" class="ml-2 block text-sm text-gray-900">
                      Active (customers can purchase)
                    </label>
                  </div>
                  <p class="mt-1 text-xs text-gray-500">
                    Deactivating prevents new purchases but doesn't affect existing customers
                  </p>
                </div>
  
                <div class="flex gap-4 pt-4">
                  <button
                    type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium"
                  >
                    Save Changes
                  </button>
                  <a
                    href="/admin"
                    class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-2 rounded-lg font-medium"
                  >
                    Cancel
                  </a>
                </div>
              </form>
            </div>
  
            <!-- Pricing History -->
            {
              history.length > 0 && (
                <div class="bg-white rounded-lg shadow p-6 mt-6">
                  <h2 class="text-lg font-semibold text-gray-900 mb-4">Pricing History</h2>
                  <div class="space-y-3">
                    {history.map((entry, index) => (
                      <div class="flex items-center justify-between py-3 border-b border-gray-200 last:border-0">
                        <div>
                          <p class="text-sm font-medium text-gray-900">
                            ${(entry.priceCents / 100).toFixed(2)}
                            {entry.pricingType === 'subscription' && entry.subscriptionCadence && (
                              <span class="text-gray-500"> / {entry.subscriptionCadence}</span>
                            )}
                          </p>
                          <p class="text-xs text-gray-500 mt-1">
                            Effective from {new Date(entry.effectiveFrom).toLocaleDateString()}
                            {entry.effectiveUntil &&
                              ` until ${new Date(entry.effectiveUntil).toLocaleDateString()}`}
                          </p>
                        </div>
                        {index === 0 && (
                          <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded-full">
                            Current
                          </span>
                        )}
                      </div>
                    ))}
                  </div>
                </div>
              )
            }
          </div>
  
          <!-- Sidebar Stats -->
          <div class="space-y-6">
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-sm font-medium text-gray-500 mb-4">Statistics</h3>
              <dl class="space-y-4">
                <div>
                  <dt class="text-xs text-gray-500">Total Revenue</dt>
                  <dd class="text-2xl font-bold text-gray-900 mt-1">
                    ${(totalRevenue / 100).toFixed(2)}
                  </dd>
                </div>
                <div>
                  <dt class="text-xs text-gray-500">Total Purchases</dt>
                  <dd class="text-2xl font-bold text-gray-900 mt-1">{totalPurchases}</dd>
                </div>
                <div>
                  <dt class="text-xs text-gray-500">Active Customers</dt>
                  <dd class="text-2xl font-bold text-gray-900 mt-1">{activePurchases}</dd>
                </div>
              </dl>
            </div>
  
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-sm font-medium text-gray-500 mb-4">Quick Links</h3>
              <div class="space-y-2">
                <a
                  href={`/products/${repository.slug}`}
                  target="_blank"
                  class="block w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium text-center"
                >
                  View Product Page
                </a>
                <a
                  href={`https://github.com/${repository.githubOwner}/${repository.githubRepoName}`}
                  target="_blank"
                  class="block w-full bg-gray-800 hover:bg-gray-900 text-white px-4 py-2 rounded-lg text-sm font-medium text-center"
                >
                  View on GitHub
                </a>
                <a
                  href={`/admin/customers?repository=${repository.id}`}
                  class="block w-full bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded-lg text-sm font-medium text-center"
                >
                  View Customers
                </a>
              </div>
            </div>
  
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-sm font-medium text-gray-500 mb-4">Repository Info</h3>
              <dl class="space-y-3">
                <div>
                  <dt class="text-xs text-gray-500">Slug</dt>
                  <dd class="text-sm text-gray-900 font-mono">{repository.slug}</dd>
                </div>
                <div>
                  <dt class="text-xs text-gray-500">Created</dt>
                  <dd class="text-sm text-gray-900">
                    {new Date(repository.createdAt).toLocaleDateString()}
                  </dd>
                </div>
                {
                  repository.githubStars && repository.githubStars > 0 && (
                    <div>
                      <dt class="text-xs text-gray-500">GitHub Stars</dt>
                      <dd class="text-sm text-gray-900">{repository.githubStars}</dd>
                    </div>
                  )
                }
              </dl>
            </div>
          </div>
        </div>
      </main>
    </div>
  </Layout>  
</PostHogLayout>

<script define:vars={{ repositoryId: repository.id }}>
  const form = document.getElementById('edit-form');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const price = parseFloat(formData.get('price') as string);

    const data = {
      displayName: formData.get('displayName'),
      description: formData.get('description') || undefined,
      coverImageUrl: formData.get('coverImageUrl') || undefined,
      priceCents: Math.round(price * 100),
      active: formData.get('active') === 'on',
    };

    try {
      const response = await fetch(`/api/admin/repositories/${repositoryId}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        alert('Repository updated successfully!');
        window.location.reload();
      } else {
        const error = await response.json();
        alert(`Error: ${error.error || 'Failed to update repository'}`);
      }
    } catch (error) {
      alert('Error updating repository');
      console.error(error);
    }
  });
</script>
