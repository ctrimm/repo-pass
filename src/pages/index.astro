                    </div>
                  </div>
                </div>

                <!-- Testimonial 3 -->
                <div class="w-full flex-shrink-0 px-4">
                  <div
                    class="bg-white rounded-2xl shadow-xl p-8 max-w-2xl mx-auto transform transition-all hover:scale-105"
                  >
                    <div class="flex items-center gap-1 mb-4">
                      {
                        [...Array(5)].map(() => (
                          <svg
                            class="w-5 h-5 text-yellow-400"
