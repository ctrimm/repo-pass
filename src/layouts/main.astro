---
import '../styles/global.css';
import SEO from '../components/SEO.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
  nofollow?: boolean;
}

const { title, description, image, canonical, type, noindex, nofollow } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Antic&family=JetBrains+Mono:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- Signifier font would be loaded from Adobe Fonts or custom source -->

    <SEO
      title={title}
      description={description}
      image={image}
      canonical={canonical}
      type={type}
      noindex={noindex}
      nofollow={nofollow}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
