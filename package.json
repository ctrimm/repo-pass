{
  "name": "repo-pass",
  "type": "module",
  "version": "0.1.0",
  "description": "RepoPass - Monetize GitHub repository access with automated payments",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx src/db/reset.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.astro",
    "lint:fix": "eslint src --ext .ts,.tsx,.astro --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,astro,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,astro,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "stripe:listen": "stripe listen --forward-to localhost:4321/api/webhooks/stripe"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/node": "^9.2.1",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.0",
    "@octokit/rest": "^21.0.2",
    "@radix-ui/react-avatar": "^1.2.1",
    "@radix-ui/react-dialog": "^1.2.2",
    "@radix-ui/react-dropdown-menu": "^2.2.2",
    "@radix-ui/react-label": "^2.2.0",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.2.1",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.1",
    "@radix-ui/react-tabs": "^1.2.2",
    "@radix-ui/react-toast": "^1.2.3",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.7.0",
    "isomorphic-dompurify": "^2.20.0",
    "jose": "^5.9.6",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.0.9",
    "postgres": "^3.4.5",
    "resend": "^4.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "redis": "^4.7.0",
    "stripe": "^17.6.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^2.1.8",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.18.0",
    "eslint-plugin-astro": "^1.4.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.15.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
